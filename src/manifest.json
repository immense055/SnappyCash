{
  "manifest_version": 2,
  "default_locale": "en",
  "name": "Snappy Cash",
  "description": "Enhances Bitcoin Cash plain-text addresses displayed on page with scannable QR codes for desktop tipping via mobile wallets and integrated Badger Wallet widgets.",
  "version": "0.0.1",
  "homepage": "https://github.com/sterlingbeason/SnappyCash",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*.bitcoin.com/*"
  ],
  "web_accessible_resources": [
    "badger/*.js",
    "icons/*.png"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}